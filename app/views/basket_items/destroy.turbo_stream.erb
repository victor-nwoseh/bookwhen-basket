<%= turbo_stream.update "basket" do %>
  <%= render "basket/panel", basket: @basket %>
<% end %>

<%= turbo_stream.update "event_#{@event.id}" do %>
  <%= render "events/card", event: @event, in_basket: false %>
<% end %>

<%= turbo_stream.update "basket_review" do %>
  <%= render "baskets/review", basket: @basket, items: @items %>
<% end %>
